<% content_for :content do %>
    <h1>Here is the user</h1>
    <%= render partial: "shared/user_card", locals: {user: @user} %>
    <%= render partial: "shared/user_bio"%>
  <% @user.recent_posts.each do |post| %>
        <%= link_to user_post_path(user_id: @user.id, id: post.id), class: 'post_link' do %>
          <%= render partial: "shared/post_card", locals: {post: post} %>
        <% end %>
      <% end %>
    <br>
    <%= link_to "See all posts", user_posts_path(user_id: @user.id), class: "show_all_posts" %>
    <%= link_to "Create a new post", new_user_post_path(user_id: @user.id), class: "show_all_posts" %>
<% end %>
